<center>
  <h1>All Pizzas</h1>

<% for pizza in @pizzas do %>

  <p>Name: <%= pizza.pretty_name() %></p>
  <p>Order: <%= pizza.quantity() %> x <%= pizza.topping() %></p>
  <p><a href="/pizzas/<%= pizza.id %>">Show order</a></p>

  <form action="/pizzas/<%= pizza.id %>/edit" method="get">
    <input type="submit" class="button" value="Edit Pizza"/>
  </form>

  <form action="/pizzas/<%= pizza.id %>/delete" method="POST">
    <input type="submit" class="button" value="Delete Pizza"/>
  </form>

  <hr/>

<% end %>
</center>
